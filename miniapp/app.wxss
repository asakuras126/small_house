/* 全局样式 */
page {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%);
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  line-height: 1.6;
}

.container {
  min-height: 100vh;
}

.btn {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  margin: 32rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.4);
  transition: all 0.3s ease;
  border: none;
}

.btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.3);
}

.btn-secondary {
  background: linear-gradient(135deg, #f093fb, #f5576c);
  box-shadow: 0 8rpx 24rpx rgba(240, 147, 251, 0.4);
}

.btn-secondary:active {
  box-shadow: 0 4rpx 12rpx rgba(240, 147, 251, 0.3);
}

.input {
  border: 2rpx solid #fdbdcb;
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  font-size: 30rpx;
  margin-bottom: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.1);
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.input:focus {
  border-color: #ff6b9d;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.2);
}

.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 12rpx 48rpx rgba(255, 107, 157, 0.15);
  padding: 40rpx;
  margin: 20rpx;
  backdrop-filter: blur(20rpx);
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff6b9d;
  margin-bottom: 32rpx;
  text-align: center;
}

.text-center {
  text-align: center;
}

.error-message {
  color: #ff5252;
  font-size: 26rpx;
  margin-bottom: 24rpx;
  text-align: center;
  padding: 16rpx;
  background: rgba(255, 82, 82, 0.1);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 82, 82, 0.2);
} 