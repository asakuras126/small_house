@import "../../app.wxss"; 

.container {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%);
  min-height: 100vh;
  padding: 0;
}

.header-section {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.task-status-badge {
  display: inline-block;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  backdrop-filter: blur(10rpx);
}

.task-status-badge.completed {
  background: rgba(76, 175, 80, 0.2);
  color: #4caf50;
  border: 2rpx solid rgba(76, 175, 80, 0.3);
}

.task-status-badge.pending {
  background: rgba(255, 193, 7, 0.2);
  color: #ffc107;
  border: 2rpx solid rgba(255, 193, 7, 0.3);
}

.task-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  line-height: 1.3;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.details-card {
  background: rgba(255, 255, 255, 0.95);
  margin: 20rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 48rpx rgba(255, 107, 157, 0.15);
  backdrop-filter: blur(20rpx);
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 20rpx 0;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.3);
}

.detail-content {
  flex: 1;
}

.detail-label {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.detail-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  line-height: 1.4;
}

.priority-high {
  color: #f5576c;
}

.priority-medium {
  color: #ffafbd;
}

.priority-low {
  color: #a8edea;
}

.action-section {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 20rpx 20rpx;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx 20rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.15);
}

.edit-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.delete-btn {
  background: rgba(245, 87, 108, 0.15);
  border: 2rpx solid rgba(245, 87, 108, 0.3);
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.2);
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
  position: relative;
}

.edit-icon {
  border: 3rpx solid #fff;
  border-radius: 8rpx;
  position: relative;
  background: transparent;
}

.edit-icon::before {
  content: '';
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 18rpx;
  height: 3rpx;
  background: #fff;
  transform: rotate(45deg);
  border-radius: 2rpx;
}

.edit-icon::after {
  content: '';
  position: absolute;
  top: -5rpx;
  right: -11rpx;
  width: 0;
  height: 0;
  border-left: 6rpx solid #fff;
  border-top: 3rpx solid transparent;
  border-bottom: 3rpx solid transparent;
}

.delete-icon {
  border: 3rpx solid #f5576c;
  border-radius: 8rpx;
  position: relative;
  background: transparent;
}

.delete-icon::before {
  content: '';
  position: absolute;
  top: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 20rpx;
  height: 6rpx;
  background: #f5576c;
  border-radius: 3rpx;
}

.delete-icon::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 2rpx;
  height: 20rpx;
  background: #f5576c;
  border-radius: 1rpx;
  box-shadow: 8rpx 0 0 #f5576c, -8rpx 0 0 #f5576c;
}

.action-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
} 